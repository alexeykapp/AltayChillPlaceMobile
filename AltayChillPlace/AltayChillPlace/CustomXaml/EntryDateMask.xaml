<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:AltayChillPlace.Helpers"
             x:Class="AltayChillPlace.CustomXaml.EntryDateMask">
    <ContentView.Content>
        <Frame CornerRadius="20" BorderColor="#EFF5FB" Padding="0" HasShadow="False" BackgroundColor="Transparent" WidthRequest="300">
            <Grid VerticalOptions="Center">
                <DatePicker x:Name="datePicker" Format="D" MinimumDate="01/01/1930"
                            Date="{Binding Date, Mode=TwoWay}" 
                            TextColor="White" 
                            HorizontalOptions="Start" 
                            Margin="10,0,70,0"
                               FontFamily="MaMedium">
                </DatePicker>
            </Grid>
        </Frame>
    </ContentView.Content>
</ContentView>